{
  "name": "bfs-bitmap-example",
  "version": "1.0.0",
  "author": "suleymaneryegit@gmail.com",
  "description": "Bitmap&BFS",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "build": "rimraf dist && tsc",
    "start": "rimraf dist && tsc && node dist/src/start.js --input ./test-cases/example1.txt",
    "start:dev": "nodemon --watch './**/*.ts' --exec 'ts-node' start.ts --input ./test-cases/example1.txt",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "joi": "^17.6.0",
    "minimist": "^1.2.6",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/jest": "28.1.3",
    "@types/node": "^14.14.1",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "./src/start.ts"
    ]
  }
}
